# Vwap - Vegan Recipe Swap Environment Configuration Template
# Copy this file to .env and update the values for your local environment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vegan_recipe_swap
# Alternative for MongoDB: mongodb://localhost:27017/vegan_recipe_swap

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_ENV=development
APP_PORT=3000
APP_HOST=localhost
APP_SECRET_KEY=your-secret-key-here-change-in-production

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Email Configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@veganrecipeswap.com
FROM_NAME=Vegan Recipe Swap

# External API Keys
NUTRITION_API_KEY=your-nutrition-api-key
NUTRITION_API_URL=https://api.edamam.com/api/nutrition-data/v2

# Social Media Integration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Cloud Storage Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=vegan-recipe-swap-images
AWS_REGION=us-east-1

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Development Configuration
DEBUG=true
LOG_LEVEL=debug

# Production Configuration (set when deploying)
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=info
